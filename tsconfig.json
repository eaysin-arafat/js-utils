{
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["es2022", "dom", "dom.iterable"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true
  }
}
